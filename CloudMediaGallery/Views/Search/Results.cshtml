@model CloudMediaGallery.Services.SearchResult

@{
    ViewData["Title"] = "Результати пошуку";
}

<div class="container mt-4">
    <div class="mb-4">
        <h2>Результати пошуку: "@ViewBag.Query"</h2>
        <p class="text-muted">Знайдено: @Model.TotalCount</p>
    </div>

    @if (Model.Results.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var media in Model.Results)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (media.MediaType == "image")
                        {
                            <img src="@media.BlobUrl" class="card-img-top" alt="@media.FileName" style="height: 200px; object-fit: cover;">
                        }
                        else if (media.MediaType == "video")
                        {
                            <video class="card-img-top" style="height: 200px; object-fit: cover;">
                                <source src="@media.BlobUrl" type="@media.ContentType">
                            </video>
                        }
                        
                        <div class="card-body">
                            <h6 class="card-title text-truncate" title="@media.FileName">@media.FileName</h6>
                            
                            @if (media.MediaTags.Any())
                            {
                                <div class="mb-2">
                                    @foreach (var tag in media.MediaTags.Take(3))
                                    {
                                        <span class="badge bg-secondary me-1">@tag.Tag?.Name</span>
                                    }
                                    @if (media.MediaTags.Count > 3)
                                    {
                                        <span class="badge bg-light text-dark">+@(media.MediaTags.Count - 3)</span>
                                    }
                                </div>
                            }
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    ❤️ @media.Likes.Count
                                    @if (media.AverageRating > 0)
                                    {
                                        <span class="ms-2">⭐ @media.AverageRating.ToString("F1")</span>
                                    }
                                </small>
                                <a href="@Url.Action("Details", "Media", new { id = media.Id })" class="btn btn-sm btn-outline-primary">Переглянути</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @* Pagination *@
        @if (ViewBag.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { q = ViewBag.Query, page = i })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info">
            <h4>Нічого не знайдено</h4>
            <p>Спробуйте інші ключові слова або <a asp-controller="Search" asp-action="Index">почніть новий пошук</a></p>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Search" asp-action="Index" class="btn btn-secondary">← Новий пошук</a>
    </div>
</div>
