@model IEnumerable<ProjectManager.Models.TaskItem>
@{
    ViewData["Title"] = "Задачи";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Задачи</h1>
</div>

<table class="table table-striped">
    <thead>
        <tr><th>Название</th><th>Проект</th><th>Срок</th><th>Статус</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Name</td>
                <td>@t.ProjectId</td>
                <td>@(t.DueDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>@t.Status</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@t.Id" asp-route-projectId="@t.ProjectId">Открыть</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@t.Id" asp-route-projectId="@t.ProjectId">Редактировать</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@t.Id" asp-route-projectId="@t.ProjectId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <partial name="_Pagination" />
</div>
