@model IEnumerable<ProjectManager.Models.Project>
@{
    ViewData["Title"] = "Проекты";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Проекты</h1>
    <a class="btn btn-primary" asp-action="Create">Создать проект</a>
</div>

<table class="table table-striped">
    <thead>
        <tr><th>Название</th><th>Период</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@(p.StartDate?.ToString("yyyy-MM-dd") ?? "-") — @(p.EndDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@p.Id">Открыть</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@p.Id">Редактировать</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <partial name="_Pagination" />
</div>
