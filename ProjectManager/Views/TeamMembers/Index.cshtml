@model IEnumerable<ProjectManager.Models.TeamMember>
@{
    ViewData["Title"] = "Участники команды";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Участники</h1>
    <a class="btn btn-primary" asp-action="Create">Добавить участника</a>
</div>

<table class="table table-striped">
    <thead>
        <tr><th>Имя</th><th>Фамилия</th><th>Email</th><th>Роль</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
                <td>@m.Surname</td>
                <td>@m.Email</td>
                <td>@m.Role</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@m.Id">Открыть</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@m.Id">Редактировать</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@m.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <partial name="_Pagination" />
</div>
