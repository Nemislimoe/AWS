                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('–í–∏–¥–∞–ª–∏—Ç–∏ –∫–æ–ª–µ–∫—Ü—ñ—é?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger">üóëÔ∏è –í–∏–¥–∞–ª–∏—Ç–∏</button>
                        </form>
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="text-muted">@Model.Description</p>
            }

            <div class="mb-3">
                <span class="badge bg-info">@Model.CollectionMedias.Count –∑–æ–±—Ä–∞–∂–µ–Ω—å</span>
                @if (Model.IsPublic)
                {
                    <span class="badge bg-success">–ü—É–±–ª—ñ—á–Ω–∞</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">–ü—Ä–∏–≤–∞—Ç–Ω–∞</span>
                }
                <span class="badge bg-secondary">üìä –ü—ñ–¥–ø–∏—Å–Ω–∏–∫—ñ–≤: @Model.Subscriptions.Count</span>
            </div>

            @if (Model.CollectionMedias.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
                    @foreach (var cm in Model.CollectionMedias.OrderByDescending(cm => cm.AddedAt))
                    {
                        var media = cm.MediaFile;
                        @if (media != null)
                        {
                            <div class="col">
                                <div class="card h-100 shadow-sm">
                                    @if (media.MediaType == "image")
                                    {
                                        <img src="@media.BlobUrl" class="card-img-top" alt="@media.FileName" style="height: 200px; object-fit: cover;">
                                    }
                                    else if (media.MediaType == "video")
                                    {
                                        <video class="card-img-top" style="height: 200px; object-fit: cover;">
                                            <source src="@media.BlobUrl" type="@media.ContentType">
                                        </video>
                                    }
                                    
                                    <div class="card-body p-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                ‚ù§Ô∏è @media.Likes.Count
                                                @if (media.AverageRating > 0)
                                                {
                                                    <span>‚≠ê @media.AverageRating.ToString("F1")</span>
                                                }
                                            </small>
                                            <div>
                                                <a href="@Url.Action("Details", "Media", new { id = media.Id })" class="btn btn-sm btn-outline-primary">üëÅÔ∏è</a>
                                                @if (isOwner)
                                                {
                                                    <form asp-action="RemoveMedia" asp-route-collectionId="@Model.Id" asp-route-mediaId="@media.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">‚úñÔ∏è</button>
                                                    </form>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4>–ö–æ–ª–µ–∫—Ü—ñ—è –ø–æ—Ä–æ–∂–Ω—è</h4>
                    @if (isOwner)
                    {
                        <p>–î–æ–¥–∞–π—Ç–µ –∑–æ–±—Ä–∞–∂–µ–Ω–Ω—è –¥–æ –∫–æ–ª–µ–∫—Ü—ñ—ó —á–µ—Ä–µ–∑ —Å—Ç–æ—Ä—ñ–Ω–∫—É –¥–µ—Ç–∞–ª–µ–π –∑–æ–±—Ä–∞–∂–µ–Ω–Ω—è</p>
                        <a asp-controller="Media" asp-action="Index" class="btn btn-primary">–ü–µ—Ä–µ–π—Ç–∏ –¥–æ –≥–∞–ª–µ—Ä–µ—ó</a>
                    }
