@{
    ViewData["Title"] = "Upload";
}
<h2>Завантажити файл</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Файл (зображення або відео, до 50 MB)</label>
        <input type="file" name="file" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Теги (через кому)</label>
        <input type="text" name="tags" class="form-control" placeholder="vacation, family" />
    </div>
    <button class="btn btn-success">Завантажити</button>
</form>

@await Html.PartialAsync("_ValidationScriptsPartial")
