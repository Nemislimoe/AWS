@model CloudMediaGallery.Models.MediaFile

@{
    ViewData["Title"] = Model.FileName;
}

<div class="container mt-4">
    <div class="row">
        <!-- Media Display -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (Model.MediaType == "image")
                    {
                        <img src="@Model.BlobUrl" class="img-fluid rounded" alt="@Model.FileName">
                    }
                    else if (Model.MediaType == "video")
                    {
                        <video controls class="w-100 rounded">
                            <source src="@Model.BlobUrl" type="@Model.ContentType">
                            –í–∞—à –±—Ä–∞—É–∑–µ—Ä –Ω–µ –ø—ñ–¥—Ç—Ä–∏–º—É—î –≤—ñ–¥–µ–æ.
                        </video>
                    }
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card mt-3 shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">üí¨ –ö–æ–º–µ–Ω—Ç–∞—Ä—ñ (@Model.Comments.Count)</h5>
                </div>
                <div class="card-body">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <form asp-controller="Media" asp-action="Comment" method="post" class="mb-4">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="mb-3">
                                <textarea name="content" class="form-control" rows="3" placeholder="–ó–∞–ª–∏—à–∏—Ç–∏ –∫–æ–º–µ–Ω—Ç–∞—Ä..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">–ù–∞–¥—ñ—Å–ª–∞—Ç–∏</button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <a asp-controller="Account" asp-action="Login">–£–≤—ñ–π–¥—ñ—Ç—å</a>, —â–æ–± –∑–∞–ª–∏—à–∏—Ç–∏ –∫–æ–º–µ–Ω—Ç–∞—Ä
                        </div>
                    }

                    @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                    {
                        <div class="mb-3 p-3 border rounded">
                            <div class="d-flex justify-content-between">
                                <strong>@(comment.Author?.Email ?? "–ê–Ω–æ–Ω—ñ–º")</strong>
                                <small class="text-muted">@comment.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</small>
                            </div>
                            <p class="mt-2 mb-1">@comment.Content</p>
                            
                            @if (User.Identity?.IsAuthenticated == true && comment.AuthorId == ViewBag.UserId)
                            {
                                <form asp-controller="Media" asp-action="DeleteComment" method="post" class="d-inline">
                                    <input type="hidden" name="commentId" value="@comment.Id" />
                                    <input type="hidden" name="mediaId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-sm btn-link text-danger p-0">–í–∏–¥–∞–ª–∏—Ç–∏</button>
                                </form>
                            }

                            @if (comment.Replies.Any())
                            {
                                <div class="ms-4 mt-2">
                                    @foreach (var reply in comment.Replies.OrderBy(r => r.CreatedAt))
                                    {
                                        <div class="mb-2 p-2 bg-light rounded">
                                            <div class="d-flex justify-content-between">
                                                <strong>@(reply.Author?.Email ?? "–ê–Ω–æ–Ω—ñ–º")</strong>
                                                <small class="text-muted">@reply.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</small>
                                            </div>
                                            <p class="mt-1 mb-0">@reply.Content</p>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Info & Actions Sidebar -->
        <div class="col-lg-4">
            <!-- Actions -->
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title">–î—ñ—ó</h5>
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="d-grid gap-2">
                            @if (ViewBag.UserLiked)
                            {
                                <form asp-controller="Media" asp-action="Unlike" method="post">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-danger w-100">
                                        üíî –í–∏–¥–∞–ª–∏—Ç–∏ –ª–∞–π–∫ (@Model.Likes.Count)
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-controller="Media" asp-action="Like" method="post">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-outline-danger w-100">
                                        ‚ù§Ô∏è –õ–∞–π–∫ (@Model.Likes.Count)
                                    </button>
                                </form>
                            }

                            <!-- Rating -->
                            <div class="card mt-2">
                                <div class="card-body">
                                    <h6>–û—Ü—ñ–Ω–∏—Ç–∏ –∑–æ–±—Ä–∞–∂–µ–Ω–Ω—è</h6>
                                    <div class="d-flex justify-content-center gap-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            int score = i;
                                            <form asp-controller="Media" asp-action="Rate" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@Model.Id" />
                                                <input type="hidden" name="score" value="@score" />
                                                <button type="submit" class="btn btn-sm @(ViewBag.UserRating == score ? "btn-warning" : "btn-outline-warning")">
                                                    ‚≠ê
                                                </button>
                                            </form>
                                        }
                                    </div>
                                    @if (Model.AverageRating > 0)
                                    {
                                        <p class="text-center mt-2 mb-0">
                                            –°–µ—Ä–µ–¥–Ω—ñ–π —Ä–µ–π—Ç–∏–Ω–≥: <strong>@Model.AverageRating.ToString("F1")</strong> / 5.0
                                        </p>
                                    }
                                </div>
                            </div>

                            @if (Model.UploadedById == ViewContext.HttpContext.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                            {
                                <form asp-controller="Media" asp-action="Delete" method="post" onsubmit="return confirm('–í–∏ –≤–ø–µ–≤–Ω–µ–Ω—ñ?');">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-danger w-100">–í–∏–¥–∞–ª–∏—Ç–∏</button>
                                </form>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <a asp-controller="Account" asp-action="Login">–£–≤—ñ–π–¥—ñ—Ç—å</a>, —â–æ–± –≤–∑–∞—î–º–æ–¥—ñ—è—Ç–∏ –∑ –∫–æ–Ω—Ç–µ–Ω—Ç–æ–º
                        </div>
                    }
                </div>
            </div>

            <!-- Info -->
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title">–Ü–Ω—Ñ–æ—Ä–º–∞—Ü—ñ—è</h5>
                    <ul class="list-unstyled">
                        <li><strong>–ù–∞–∑–≤–∞:</strong> @Model.FileName</li>
                        <li><strong>–¢–∏–ø:</strong> @Model.MediaType</li>
                        <li><strong>–ó–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–æ:</strong> @Model.UploadedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</li>
                        <li><strong>–ê–≤—Ç–æ—Ä:</strong> @(Model.UploadedBy?.Email ?? "–ù–µ–≤—ñ–¥–æ–º–æ")</li>
                        <li><strong>–ü–µ—Ä–µ–≥–ª—è–¥—ñ–≤:</strong> @Model.ViewCount</li>
                        <li><strong>–õ–∞–π–∫—ñ–≤:</strong> @Model.Likes.Count</li>
                    </ul>

                    @if (Model.Metadata != null)
                    {
                        <div class="mt-3">
                            <strong>–û–ø–∏—Å AI:</strong>
                            <p class="text-muted">@Model.Metadata</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Tags -->
            @if (Model.MediaTags.Any())
            {
                <div class="card shadow-sm mb-3">
                    <div class="card-body">
                        <h5 class="card-title">–¢–µ–≥–∏</h5>
                        <div>
                            @foreach (var tag in Model.MediaTags)
                            {
                                <a href="@Url.Action("Index", "Media", new { tagId = tag.TagId })" class="badge bg-secondary text-decoration-none me-1 mb-1">
                                    @tag.Tag?.Name
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Add to Collection -->
            @if (User.Identity?.IsAuthenticated == true && ViewBag.UserCollections != null)
            {
                var collections = ViewBag.UserCollections as List<CloudMediaGallery.Models.Collection>;
                @if (collections?.Any() == true)
                {
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">–î–æ–¥–∞—Ç–∏ –¥–æ –∫–æ–ª–µ–∫—Ü—ñ—ó</h5>
                            @foreach (var collection in collections)
                            {
                                <form asp-controller="Collections" asp-action="AddMedia" method="post" class="d-inline">
                                    <input type="hidden" name="collectionId" value="@collection.Id" />
                                    <input type="hidden" name="mediaId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-primary mb-1">
                                        + @collection.Name
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Media" asp-action="Index" class="btn btn-secondary">‚Üê –ù–∞–∑–∞–¥ –¥–æ –≥–∞–ª–µ—Ä–µ—ó</a>
    </div>
</div>
