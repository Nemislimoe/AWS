            }
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">–Ü–Ω—Ñ–æ—Ä–º–∞—Ü—ñ—è</h5>
                    <ul class="list-unstyled">
                        <li><strong>–í–ª–∞—Å–Ω–∏–∫:</strong> @(Model.Owner?.Email ?? "–ù–µ–≤—ñ–¥–æ–º–æ")</li>
                        <li><strong>–°—Ç–≤–æ—Ä–µ–Ω–æ:</strong> @Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy")</li>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <li><strong>–û–Ω–æ–≤–ª–µ–Ω–æ:</strong> @Model.UpdatedAt.Value.ToLocalTime().ToString("dd.MM.yyyy")</li>
                        }
                        <li><strong>–ó–æ–±—Ä–∞–∂–µ–Ω—å:</strong> @Model.CollectionMedias.Count</li>
                    </ul>

                    @if (!isOwner && Model.IsPublic && User.Identity?.IsAuthenticated == true)
                    {
                        <hr>
                        @if (isSubscribed)
                        {
                            <form asp-action="Unsubscribe" asp-route-id="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    üîï –í—ñ–¥–ø–∏—Å–∞—Ç–∏—Å—è
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Subscribe" asp-route-id="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary w-100">
                                    üîî –ü—ñ–¥–ø–∏—Å–∞—Ç–∏—Å—è
                                </button>
                            </form>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">‚Üê –ù–∞–∑–∞–¥ –¥–æ –º–æ—ó—Ö –∫–æ–ª–µ–∫—Ü—ñ–π</a>
